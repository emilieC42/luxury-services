{% extends 'base.html.twig' %}

{% block body %}
    <h1>Create new JobOffer</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>JobReference</th>
                <th>NameSociety</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Description</th>
                <th>Notes</th>
                <th>JobTitle</th>
                <th>DateCreation</th>
                <th>JobCategorie</th>
                <th>JobType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr>
                <td>{{ job_offer.id }}</td>
                <td>{{ job_offer.jobReference }}</td>
                <td>{{ job_offer.nameSociety }}</td>
                <td>{{ job_offer.email }}</td>
                <td>{{ job_offer.phone }}</td>
                <td>{{ job_offer.description }}</td>
                <td>{{ job_offer.notes }}</td>
                <td>{{ job_offer.jobTitle }}</td>
                <td>{{ job_offer.dateCreation ? job_offer.dateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ job_offer.jobCategorie }}</td>
                <td>{{ job_offer.jobType }}</td>
                <td>
                    <a href="{{ path('job_offer_show', {'id': job_offer.id}) }}">show</a>
                    <a href="{{ path('job_offer_edit', {'id': job_offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_offer_new') }}">Create new</a>
{% endblock %}
